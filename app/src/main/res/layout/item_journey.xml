<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/journey_list_item_vertical_margin"
    android:layout_marginTop="@dimen/journey_list_item_vertical_margin"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:35"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:38"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2h 35m"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:13"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="9dp">

        <TextView
            style="@style/JourneySection"
            android:background="@drawable/rounded_corner_primary"
            android:text="ICE"
            android:layout_height="match_parent"/>

        <ImageView
            style="@style/SeperatorArrow"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/JourneySection"
            android:background="@drawable/rounded_corner_accent"
            android:text="RB"
            android:layout_height="match_parent"/>

        <ImageView
            style="@style/SeperatorArrow"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/JourneySection"
            android:background="@drawable/rounded_corner_accent"
            android:text="RE"
            android:layout_height="match_parent"/>

        <ImageView
            style="@style/SeperatorArrow"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/JourneySection"
            android:background="@drawable/rounded_corner_primary"
            android:text="ICE"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>