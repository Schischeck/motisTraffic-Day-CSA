include "base/TripId.fbs";
include "base/TimestampReason.fbs";

namespace motis.rt;

enum EventType : byte { DEPARTURE, ARRIVAL }

table ShiftedNode {
  trip:motis.TripId;
  station_id:string;
  schedule_time:long;
  event_type:EventType;
  updated_time:long;
  reason:TimestampReason;
  canceled:bool;
}

table RtUpdate {
  shifted_nodes:[ShiftedNode];
}